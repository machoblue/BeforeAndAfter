<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/weightSummaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/weight_summary_title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_current_weight_label"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/current_weight_label"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/bestWeightLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bestWeightLabel" />

    <TextView
        android:id="@+id/currentWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="99.99kg"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/currentWeightLabel"
        app:layout_constraintStart_toEndOf="@id/currentWeightLabel"
        app:layout_constraintTop_toTopOf="@id/currentWeightLabel" />

    <TextView
        android:id="@+id/firstWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="@string/first_weight_label"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/firstWeightTextView"
        app:layout_constraintEnd_toStartOf="@id/firstWeightTextView"
        app:layout_constraintTop_toTopOf="@+id/firstWeightTextView" />

    <TextView
        android:id="@+id/firstWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:text="99.99kg"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bestWeightTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightSummaryTitle" />

    <TextView
        android:id="@+id/bestWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_best_weight_label"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/best_weight_label"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/bestWeightTextView"
        app:layout_constraintEnd_toStartOf="@id/bestWeightTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toTopOf="@+id/bestWeightTextView" />

    <TextView
        android:id="@+id/bestWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="99.99kg"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/goalWeightTextView"
        app:layout_constraintEnd_toEndOf="@id/firstWeightTextView"
        app:layout_constraintTop_toBottomOf="@+id/firstWeightTextView" />

    <TextView
        android:id="@+id/goalWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="@string/goal_label"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/goalWeightTextView"
        app:layout_constraintEnd_toStartOf="@id/goalWeightTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toTopOf="@+id/goalWeightTextView" />

    <TextView
        android:id="@+id/goalWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="99.99kg"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/setGoalButton"
        app:layout_constraintEnd_toEndOf="@id/firstWeightTextView"
        app:layout_constraintTop_toBottomOf="@+id/bestWeightTextView"
        app:layout_goneMarginBottom="16dp" />

    <Button
        android:id="@+id/setGoalButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="@string/set_goal"
        android:textColor="@color/light_blue"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/firstWeightTextView"
        app:layout_constraintTop_toBottomOf="@id/goalWeightTextView" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="bestWeightLabel,firstWeightLabel,goalWeightLabel"
        />

</androidx.constraintlayout.widget.ConstraintLayout>