<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/adLayout"
        android:background="@color/light_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="50dp">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_unit_id">
        </com.google.android.gms.ads.AdView>
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/adLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:paddingBottom="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/weightSummaryCard"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/weightSummaryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/weight_summary_title"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/currentWeightLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/background_current_weight_label"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="@string/current_weight_label"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/bestWeightLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/bestWeightLabel" />

                    <TextView
                        android:id="@+id/currentWeightTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="99.99kg"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="@id/currentWeightLabel"
                        app:layout_constraintStart_toEndOf="@id/currentWeightLabel"
                        app:layout_constraintTop_toTopOf="@id/currentWeightLabel" />

                    <TextView
                        android:id="@+id/firstWeightLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="@string/first_weight_label"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/firstWeightTextView"
                        app:layout_constraintEnd_toStartOf="@id/firstWeightTextView"
                        app:layout_constraintTop_toTopOf="@+id/firstWeightTextView" />

                    <TextView
                        android:id="@+id/firstWeightTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="28dp"
                        android:text="99.99kg"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/bestWeightTextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/weightSummaryTitle" />

                    <TextView
                        android:id="@+id/bestWeightLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/background_best_weight_label"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="@string/best_weight_label"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/bestWeightTextView"
                        app:layout_constraintEnd_toStartOf="@id/bestWeightTextView"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/barrier"
                        app:layout_constraintTop_toTopOf="@+id/bestWeightTextView" />

                    <TextView
                        android:id="@+id/bestWeightTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="99.99kg"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/goalWeightTextView"
                        app:layout_constraintEnd_toEndOf="@id/firstWeightTextView"
                        app:layout_constraintTop_toBottomOf="@+id/firstWeightTextView" />

                    <TextView
                        android:id="@+id/goalWeightLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="@string/goal_label"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/goalWeightTextView"
                        app:layout_constraintEnd_toStartOf="@id/goalWeightTextView"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/barrier"
                        app:layout_constraintTop_toTopOf="@+id/goalWeightTextView" />

                    <TextView
                        android:id="@+id/goalWeightTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="99.99kg"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@id/setGoalButton"
                        app:layout_constraintEnd_toEndOf="@id/firstWeightTextView"
                        app:layout_constraintTop_toBottomOf="@+id/bestWeightTextView"
                        app:layout_goneMarginBottom="16dp" />

                    <Button
                        android:id="@+id/setGoalButton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:text="@string/set_goal"
                        android:textColor="@color/light_blue"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/firstWeightTextView"
                        app:layout_constraintTop_toBottomOf="@id/goalWeightTextView" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="left"
                        app:constraint_referenced_ids="bestWeightLabel,firstWeightLabel,goalWeightLabel"
                        tools:layout_editor_absoluteX="387dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/weightProgressCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/weightProgressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/weight_progress_title"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/elapsedDayTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="999日目"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@id/weightProgressTextView"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/elapsedDayHelpButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_help_outline_black_24dp"
                        app:layout_constraintBottom_toBottomOf="@id/elapsedDayTextView"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintStart_toEndOf="@id/elapsedDayTextView"
                        app:layout_constraintTop_toTopOf="@id/elapsedDayTextView" />

                    <TextView
                        android:id="@+id/weightProgressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="99%達成"
                        android:textSize="30sp"
                        app:layout_constraintStart_toEndOf="@id/elapsedDayHelpButton"
                        app:layout_constraintTop_toBottomOf="@+id/weightProgressTitle" />

                    <Button
                        android:id="@+id/setGoalButton2"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="4dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:text="@string/set_goal"
                        android:textColor="@color/light_blue"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/weightProgressTextView"
                        app:layout_constraintStart_toEndOf="@id/weightProgressTextView"
                        />

                    <TextView
                        android:id="@+id/weightAchieveExpectTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:text="999日後達成見込み"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/elapsedDayTextView"
                        app:layout_constraintTop_toBottomOf="@+id/weightProgressTextView" />

                    <ImageView
                        android:id="@+id/weightArchiveExpectHelpButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_help_outline_black_24dp"
                        app:layout_constraintBottom_toBottomOf="@id/weightAchieveExpectTextView"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintStart_toEndOf="@id/weightAchieveExpectTextView"
                        app:layout_constraintTop_toTopOf="@id/weightAchieveExpectTextView" />

                    <org.macho.beforeandafter.dashboard.ProgressView
                        android:id="@+id/weightProgressView"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/weightAchieveExpectTextView" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ad_frame"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="88dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/emptyView"
        android:background="#ccffffff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/adLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:gravity="center"
            android:textSize="20dp"
            android:text="@string/empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:gravity="center"
            android:text="@string/empty_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:src="@mipmap/ic_mode_edit_white_24dp"
        app:fabSize="normal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
